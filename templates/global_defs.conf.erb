global_defs {
<% if @notification_email %>
  notification_email {
  <% @notification_email.each do | email | -%>
    <%= email %>
  <% end %>
  }
<% end %>
<% if @notification_email_from %>
  notification_email_from <%= @notification_email_from.to_s %>
<% end %>
<% if @smtp_server %>
  smtp_server <%= @smtp_server.to_s %>
<% end %>
<% if @smtp_helo_name %>
  smtp_helo_name <%= @smtp_helo_name.to_s %>
<% end %>
<% if @smtp_connect_timeout %>
  smtp_connect_timeout <%= @smtp_connect_timeout.to_s %>
<% end %>
<% if @router_id %>
  router_id <%= @router_id.to_s %>
<% end %>
<% if @vrrp_mcast_group4 %>
  vrrp_mcast_group4 <%= @vrrp_mcast_group4.to_s %>
<% end %>
<% if @vrrp_mcast_group6 %>
  vrrp_mcast_group6 <%= @vrrp_mcast_group6.to_s %>
<% end %>
<% if @vrrp_garp_master_delay %>
  vrrp_garp_master_delay <%= @vrrp_garp_master_delay.to_s %>
<% end %>
<% if @vrrp_garp_master_repeat %>
  vrrp_garp_master_repeat <%= @vrrp_garp_master_repeat.to_s %>
<% end %>
<% if @vrrp_garp_master_refresh %>
  vrrp_garp_master_refresh <%= @vrrp_garp_master_refresh.to_s %>
<% end %>
<% if @vrrp_garp_master_refresh_repeat %>
  vrrp_garp_master_refresh_repeat <%= @vrrp_garp_master_refresh_repeat.to_s %>
<% end %>
<% if @vrrp_version %>
  vrrp_version <%= @vrrp_version.to_s %>
<% end %>
<% if @vrrp_iptables %>
  vrrp_iptables <%= @vrrp_iptables.to_s %>
<% end %>
<% if @vrrp_check_unicast_src %>
  vrrp_check_unicast_src
<% end %>
<% if @vrrp_strict %>
  vrrp_strict
<% end %>
<% if @vrrp_priority %>
  vrrp_priority <%= @vrrp_priority.to_s %>
<% end %>
<% if @checker_priority %>
  checker_priority <%= @checker_priority.to_s %>
<% end %>
<% if @vrrp_no_swap %>
  vrrp_no_swap
<% end %>
<% if @checker_no_swap %>
  checker_no_swap
<% end %>
<% if @snmp_socket %>
  snmp_socket <%= @snmp_socket.to_s %>
<% end %>
<% if @enable_snmp_checker %>
  enable_snmp_checker
<% end %>
<% if @enable_snmp_rfcv2 %>
  enable_snmp_rfcv2
<% end %>
<% if @enable_snmp_rfcv3 %>
  enable_snmp_rfcv3
<% end %>
<% if @enable_traps %>
  enable_traps
<% end %>
<% if @enable_script_security %>
  enable_script_security
<% end %>
<% unless @extra_options.nil? -%>
<% @extra_options.each do | option, value | -%>
<% if value.is_a?(Array) %>
  <%= option %> {
<% value.each do | array_element | %>
    <%= array_element %>
<% end -%>
  }
<% else %>
  <%= option %> <%= value %>
<% end -%>
<% end -%>
<% end -%>
}
